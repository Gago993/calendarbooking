@model CalendarBookingProject.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="jumbotron">
    <div class="container">
        <span class="glyphicon glyphicon-list-alt"></span>
        <h2>Calendar</h2>
        <div class="box">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = "" }))
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.Username, new { @placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error-message" })
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
                
                <button class="btn btn-default full-width"><span class="glyphicon glyphicon-ok"></span></button>
            }
        </div>
    </div>
</div>

@section Styles{
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
}
